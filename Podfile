  pod 'SwiftyJSON'

  # UI
  pod 'Nuke', '~> 5.0'
  pod 'UIImageColors'
  pod 'ReverseExtension'
  pod 'Popover'
  pod 'MXPagerView'
  pod 'SnapKit', '~> 3.2.0'
  pod 'GSMessages'
  pod 'TTTAttributedLabel'
  pod 'SlideMenuControllerSwift'

  # Code Analysis & Standards
  pod 'SwiftLint'

  # React
  pod 'Bond'

  # Analytics, Crash Reporting
  pod 'Fabric'
  pod 'Crashlytics'

end
