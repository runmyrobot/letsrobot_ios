platform :ios, '9.0'

target 'RunMyRobot' do
  use_frameworks!

  # Networking & Parsing
  pod 'Socket.IO-Client-Swift', '~> 9.0.0'
  pod 'Alamofire', '~> 4.4'
  pod 'SwiftyJSON'

  # UI
  pod 'Nuke', '~> 5.0'
  pod 'UIImageColors'
  pod 'ReverseExtension'
  pod 'MXPagerView'
  pod 'SnapKit', '~> 3.2.0'
  pod 'GSMessages'
  pod 'TTTAttributedLabel'
  pod 'SlideMenuControllerSwift'
  pod 'PopupDialog', '~> 0.5'
  pod 'GMStepper'
  pod 'TagListView', '~> 1.0'

  # Code Analysis & Standards
  pod 'SwiftLint'

  # Analytics, Crash Reporting
  pod 'Fabric'
  pod 'Crashlytics'

  # Payment
  pod 'Braintree'
  pod 'Braintree/Apple-Pay'
  pod 'BraintreeDropIn'

  # Push Notifications
  pod 'OneSignal', '>= 2.5.2', '< 3.0'
end

target 'RMRNotificationServiceExtension' do
  pod 'OneSignal', '>= 2.5.2', '< 3.0'
end
